<nav class="topnav">
  <div class="topnav-left">
    <%= link_to root_path, id: 'navbar-logo', class: 'topnav-item' do %>
      DEV<span id="sr-secondary">SR</span>
    <% end %>
  </div>
  <div class="topnav-right" id="topnavResponsive">
    <span class="topnav-item"><%= render partial: 'session_buttons' %></span>
  </div>
</nav>

<div id="login-modal" class="modal fade" role="dialog">Y
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="modal-title">Log in</h2>
      </div>
      <div class="modal-body">
        <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <%= f.email_field :email, autofocus: true %>

            <%= f.password_field :password, autocomplete: 'off' %>

            <% if devise_mapping.rememberable? -%>
                <%= f.check_box :remember_me %>
            <% end -%>

            <div class="actions centered">
              <%= f.submit 'Log in', class: 'btn btn-primary' %>
            </div>
        <% end %>

        <%= render 'devise/shared/links' %>
      </div>
    </div>
  </div>
</div>