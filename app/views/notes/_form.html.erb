<div class="note-form">
  <%= bootstrap_form_for(note) do |f| %>
    <% if note.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(note.errors.count, 'error') %> prohibited this note from being saved:</h2>

        <ul>
        <% note.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <%= f.text_field :subtitle %>
    </div>

    <%= f.label 'Image URL' %>
    <span class="fa fa-question-circle" title="This is the image that will be shown on the link to this article" data-toggle="tooltip" data-placement="top"></span>

    <div class="field">
      <%= f.text_field :image_url, hide_label: true %>
    </div>

    <div class="field note-new-body">
      <%= f.text_area :body %>
    </div>

    <div class="field">
      <%= f.check_box :comments_enabled %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>
