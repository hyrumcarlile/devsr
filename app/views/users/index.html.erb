<div class="container">
  <h1>Users</h1>

  <% if @users.blank? %>
      <h4>Woops! Didn't find any users. Try another search.</h4>
  <% end %>

  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% counter = 0 %>
      <% @users.each do |user| %>
        <tr>
          <td><%= counter += 1 %></td>
          <td><img src="<%= user.avatar_url %>" class="endorser-img-modal"/></td>
          <td><%= user.rating.to_s %></td>
          <td><%= user.email %></td>
          <td><%= user.name %></td>
          <td><%= user.username %></td>
          <td><%= link_to 'Show', user %></td>
          <td><%= link_to 'Edit', edit_user_path(user) %></td>
          <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'destroy' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New User', new_user_path %>
</div>
