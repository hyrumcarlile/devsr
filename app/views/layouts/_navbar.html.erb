<nav class="navbar navbar-dark bg-primary">
  <ul class="navbar-nav nav-float-left">
    <%= link_to root_path do %>
      <li class="nav-item" id="navbar-logo">DEVSR</li>
    <% end %>
  </ul>
  <form class="navbar-form nav-float-right">
    <%= form_tag(users_path, :method => 'get', id: 'search-form') do %>
      <div class="input-group">
        <%= text_field_tag :search, params[:search],
                           class: 'form-control',
                           autocomplete: 'off',
                           autocorrect: 'off',
                           autocapitalize: 'off',
                           spellcheck: 'false' %>
        <div class="input-group-btn">
          <%= button_tag :type => 'submit', :name => nil, class: 'btn btn-secondary' do %>
            <%= icon('search') %>
          <% end %>
        </div>
      </div>
    <% end %>
  </form>
  <ul class="navbar-nav">
    <li class="nav-item">
      <% unless user_signed_in?  %>
        <% unless params[:controller].eql?('devise/sessions') && params[:action].eql?('new') %>
          <button type="button" class="btn btn-primary round outline nav-link" id="sign-in-out-btn" data-toggle="modal" data-target="#login-modal">Log In</button>
        <% end %>
      <% end %>
      <% if user_signed_in? %>
          <%= link_to 'Log Out', destroy_user_session_path, class: 'btn btn-primary round outline nav-link', id: 'sign-in-out-btn', :method => :delete %>
      <% end %>
    </li>
  </ul>
</nav>
